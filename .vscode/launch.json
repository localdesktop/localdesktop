{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "request": "launch",
      // CodeLLDB v1.11.2 has a bug when launching (https://github.com/vadimcn/codelldb/issues/1220).
      // Downgrade to v1.11.1 via Extensions tab > CodeLLDB > Install Specific Version... > v1.11.1.
      "type": "android-debug",
      "name": "[Android] Debug",
      "preLaunchTask": "[Android] Build",
      "target": "select",
      "mode": "native",
      "apkPath": "${workspaceFolder}/target/x/release/android/gradle/app/build/outputs/apk/debug/app-debug.apk",
      "launchActivity": "android.app.NativeActivity"
    }
  ]
}